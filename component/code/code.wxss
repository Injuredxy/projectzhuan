.component-code{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}
.component-code-bg{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}
.component-code-body{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 510rpx;
  height: 644rpx;
  transform: translate(-50%, -50%);
  text-align: center;
  color: rgba(0, 0, 0, 0.85);
}
.component-code image{
  display: block;
  width: 250rpx;
  height: 250rpx;
  margin: 122rpx auto 42rpx;
  background-color: #f2f2f2;
}
.component-code-num{
  padding-top: 44rpx;
  font-size: 40rpx;
}
.component-code-num{
  font-size: 28rpx;
}