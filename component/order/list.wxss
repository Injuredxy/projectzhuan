/* 订单列表 */

.list-view {
  position: absolute;
  top: 50%;
  left: 56rpx;
  transform: translateY(-50%);
}

.list-image {
  position: relative;
  width: 626rpx;
  height: 750rpx;
}

.list-image1 {
  position: relative;
  width: 626rpx;
  height: 524rpx;
}

.list-close {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 60rpx;
  right: -18rpx
}

.list-text {
  width: 246rpx;
  height: 66rpx;
  font-size: 48rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 66rpx;
  text-shadow: 0px 4px 10px rgba(214, 109, 52, 1);
  margin-top: 28rpx;
}

.list-text-view {
  width: 606rpx;
  height: 670rpx;
  border-radius: 9rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  flex-direction: column;
}

.list-text1 {
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 6rpx 0 24rpx;
  text-decoration: underline;
}

.list-scroll {
  height: 434rpx;
  width: 552rpx;
}

.list-scroll-image {
  width: 108rpx;
  height: 108rpx;
  border-radius: 9rpx;
  margin-right: 12rpx;
}

.list-scroll-item {
  padding: 16rpx 20rpx 18rpx 22rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  margin-bottom: 22rpx;
}

.list-scroll-item:last-child {
  margin: 0
}

.list-scroll-icon {
  width: 70rpx;
  height: 28rpx;
  background: linear-gradient(135deg, rgba(255, 196, 25, 1) 0%, rgba(252, 155, 5, 1) 100%);
  border-radius: 14rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 24rpx;
  font-size: 17rpx;
  margin-right: 6rpx;
}

.list-scroll-text {
  width: 264rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  font-size: 28rpx;
}

.list-scroll-view1 {
  margin-top: 20rpx;
}

.list-scroll-but {
  width: 124rpx;
  height: 50rpx;
  background: linear-gradient(90deg, rgba(248, 82, 78, 1) 0%, rgba(255, 75, 43, 1) 100%);
  border-radius: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  font-size: 24rpx;
}

.list-scroll-text1 {
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  margin-right: 4rpx
}

.list-scroll-pic-view {
  margin-top: 20rpx;
}

.list-scroll-pic {
  margin-right: 20rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}

.list-group_buy {
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 32rpx;
  font-size: 22rpx;
}

.list-left-text {
  /* position: absolute; */
  /* margin-left: 6rpx; */
  width: 26rpx;
  height: 28rpx;
  background: linear-gradient(134deg, rgba(212, 97, 124, 1) 0%, rgba(208, 2, 27, 1) 100%);
  border-radius: 4rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 22rpx;
  font-size: 16rpx;
}

.list-left-dian {
  color: #535353;
  margin: 0 8rpx;
  font-size: 14rpx;
}
