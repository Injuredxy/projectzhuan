/* 弹幕 */

.barrage-view {
  width: 354rpx;
  height: 56rpx;
  background: rgba(0, 0, 0, 0.69);
  border-radius: 12rpx;
  position: fixed;
  top: 118rpx;
  left: 30rpx;
}

.barrage-name {
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  font-size: 28rpx;
  width: 140rpx
}

.barrage-text {
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  font-size: 28rpx;
}

.barrage-image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 2rpx;
  margin-right: 10rpx;
  background: pink
}

/* recommend */

.recommend-imageBG {
  width: 100%;
  height: 230rpx;
}

.recommend-list {
  margin-bottom: 20rpx;
}

.recommend-item {
  padding: 16rpx 32rpx 18rpx 32rpx;
  border-bottom: 1rpx solid#f2f2f2;
  background-color: #fff;
  white-space: nowrap;
}

.recommend-item-head {
  font-size: 24rpx;
  color: #9b9b9b;
}

.recommend-item-head image {
  width: 40rpx;
  min-width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.recommend-item-company {
  font-size: 28rpx;
  color: #333;
}

.recommend-item-distance {
  width: 100%;
  text-align: right;
}

.recommend-item-detail {
  margin-top: 12rpx;
}

.recommend-item-pic {
  width: 250rpx;
  min-width: 250rpx;
  height: 250rpx;
  margin: 4rpx 16rpx 0 0;
  border-radius: 12rpx;
}

.recommend-item-info {
  width: 100%;
  flex-direction: column;
}

.recommend-item-name {
  width: 420rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  white-space: pre-wrap;
  color: #333;
}

.recommend-item-services {
  height: 32rpx;
  width: 420rpx;
  overflow: hidden;
  margin-top: 18rpx;
}

.recommend-item-service {
  height: 28rpx;
  padding: 2rpx 8rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #f8524e;
  background: #ffeef0;
}

.recommend-item-price {
  margin-top: 8rpx;
}

.recommend-item-price-new {
  margin-right: 10rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #f8524e;
}

.recommend-item-price-new text {
  font-size: 24rpx;
}

.recommend-item-price-old {
  font-size: 24rpx;
  color: #9b9b9b;
  text-decoration: line-through;
}

.recommend-item-btn {
  width: 122rpx;
  border-radius: 6rpx;
  background: linear-gradient(135deg, rgba(237, 103, 4, 1) 0%, rgba(233, 29, 22, 1) 100%);
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #fff;
}

.recommend-list-more {
  padding: 20rpx 0;
  text-align: center;
  color: #d0021b;
  font-size: 24rpx;
  font-weight: 500;
}

