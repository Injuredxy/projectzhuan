/* 头部 */

.cushion{
  width: 100%;
  height: 100rpx
}

.head-view {
  position: fixed;
  top: 0;
  width: 100%;
  height: 140rpx;
  background: #fff;
}

.head {
  width: 100%;
  height: 140rpx;
  position: relative;
  margin-top: 10rpx;
}

.head-image {
