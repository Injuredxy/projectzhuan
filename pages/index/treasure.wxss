/* 遮盖层 */

/* 完成任务 */

.task-view {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
  top: 0;
}

.task-image {
  position: absolute;
  width: 644rpx;
  height: 652rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.task-son {
  position: relative;
  flex-direction: column;
  width: 644rpx;
  height: 652rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.task-text {
  position: absolute;
  top: 284rpx;
  left: 50%;
  transform: translatex(-50%);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
}

.task-but1 {
  position: absolute;
  width: 264rpx;
  height: 82rpx;
  left: 60rpx;
  bottom: 0;
}

.task-but2 {
  position: absolute;
  width: 264rpx;
  height: 82rpx;
  right: 60rpx;
  bottom: 0;
}

/* 领取吐司 */

.toast {
  position: fixed;
  width: 248rpx;
  height: 160rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

button::after {
  border: none;
}
