/* pages/goAssemble/goBuy.wxss */

.wrap {
  margin-top: 16rpx;
}

.wrap_goods {
  padding: 20rpx 24rpx 24rpx;
  background: rgba(255, 255, 255, 1);
}

.goods {
  display: flex;
}

.goods_right {
  width: 100%;
  margin-left: 16rpx;
}

.goods_right_top {
  height: 44rpx;
  display: flex;
  justify-content: space-between;
}

.goods_right_tit {
  font-size: 32rpx;
  width: 450rpx;
  color: rgba(0, 0, 0, 0.85);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods_right_pri {
  font-size: 24rpx;
  color: #9b9b9b;
  line-height: 44rpx;
}

.goods_right_mid {
  display: flex;
  margin-top: 18rpx;
  flex-wrap: wrap;
  width: 450rpx;
  height: 36rpx;
  overflow: hidden
}

.goods_right_mid_item {
  padding: 4rpx 14rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 28rpx;
  margin-right: 6rpx;
  background: #ffeef0;
  color: #f8524e;
}

.goods_right_bot {
  margin-top: 18rpx;
  display: flex;
  height: 32rpx;
}

.goods_right_bot_item {
  font-size: 20rpx;
  font-weight: 400;
 color:rgba(102,102,102,1);
  line-height: 28rpx;
}

.goods_right_dian {
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: rgba(74, 74, 74, 1);
  margin: 0 10rpx;
}

.goods_view:last-child .goods_right_dian {
  display: none;
}

.submit-info {
  margin-top: 16rpx;
  background: rgba(255, 255, 255, 1);
}

.submit-info-item {
  height: 94rpx;
  padding: 0 32rpx 0 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
  white-space: nowrap;
}

.submit-info-item:last-child {
  border-bottom: 0;
}

.submit-info-image{
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

.submit-info-item-value {
  color: #333;
  font: 28rpx;
}

.submit-info-item-value1 {
  width: 100%;
  text-align: right;
  color: #333;
  font: 28rpx;
}

.submit-info-item-value text {
  color: #333;
  font: 28rpx;
}

.submit-info-item-msg {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #9b9b9b;
}

.submit-info-item-name {
  font-size: 28rpx;
  color: #999;
}

.submit-info-item-price {
  font-weight: 500;
  color: rgba(248, 82, 78, 1);
  line-height: 50rpx;
  font-size: 36rpx;
}

.submit-tips {
  background-color: #f5a623;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #fff;
}

.submit-btn {
  margin: 102rpx auto;
  width: 470rpx;
  height: 104rpx;
  background: rgba(248, 82, 78, 1);
  box-shadow: 0 4rpx 16rpx 0 rgba(218, 30, 53, 0.6);
  border-radius: 52rpx;
  line-height: 104rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

button::after {
  border: none;
}