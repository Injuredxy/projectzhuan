/* 向左滑动实现删除操作 */

.touch-move-active .follow-item-body,
.touch-move-active .concernList-item-delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.touch-move .shopping, .touch-move .collection-item-delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
