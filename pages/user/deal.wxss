page {
  background: #f8f8f8;
}

.deal-view {
  height: 120rpx;
  width: 100%;
  /* flex-direction: column; */
}

.deal-top {
  margin-top: 16rpx;
}

.deal {
  background: #fff;
  padding: 24rpx 38rpx 24rpx 32rpx;
  align-items: flex-start;
  border-bottom: 1rpx solid rgba(204, 204, 204, 0.4);
}

.deal:last-child {
  border: none;
}

.deal-image {
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 1);
  border-radius: 8rpx;
  margin-right: 28rpx;
}

.deal-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  line-height: 40rpx;
}

.deal-views {
  height: 80rpx;
  align-items: baseline
}

.deal-num {
  font-size: 24rpx;
  color: #999;
}

.deal-logo {
  display: inline;
  padding: 2rpx 10rpx;
  color: #fff;
  background: #fec561;
  font-size: 22rpx;
}
