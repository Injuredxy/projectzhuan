  height: 50rpx;
  z-index: -1;
}

.user-left-text {
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  position: absolute;
  right: 32rpx;
