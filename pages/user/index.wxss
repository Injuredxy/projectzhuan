/* 头部 */

.user-head {
  position: relative;
}

button {
  margin: 0;
  padding: 0;
  background: #fff;
}

.top-image {
  width: 100%;
  height: 360rpx;
}

.user-avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-name {
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
  font-size: 36rpx;
}

.user-text {
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  margin-top: 6rpx;
}

