/* middle */

.middle-view {
  width: 670rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 30rpx 0rpx rgba(90, 13, 13, 0.07);
  border-radius: 16rpx;
  padding: 28rpx 28rpx 40rpx 32rpx;
  box-sizing: border-box;
  position: absolute;
  top: 270rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
}

.middle-one {
  margin-bottom: 58rpx;
}

.middle-top-text {
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  font-size: 32rpx;
}

.middle-left-text {
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  font-size: 24rpx;
}

.middle-left-icon {
  width: 32rpx;
  height: 32rpx;
}

.middle-icon1 {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.middle-icon2 {
  position: relative;
  width: 42rpx;
  height: 40rpx;
}

.middle-icon-view {
  flex-direction: column;
}

.middle-text {
  margin-top: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  font-size: 24rpx;
}

.middle-num {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  font-weight: 400;
  color: rgba(248, 82, 78, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(248, 82, 78, 1);
  top: -16rpx;
  right: -12rpx;
  box-sizing: border-box;
}

.middle-image1 {
  width: 40rpx;
  height: 40rpx;
}

.middle-image2 {
  width: 42rpx;
  height: 40rpx;
}

.middle-image3 {
  width: 42rpx;
  height: 40rpx;
}

.middle-image4 {
  width: 40rpx;
  height: 40rpx;
}

.middle-list {
  width: 606rpx;
  height: 144rpx;
  background: rgba(248, 248, 248, 1);
  border-radius: 4rpx;
  margin-top: 28rpx;
  padding: 16rpx 0 16rpx 24rpx;
  box-sizing: border-box;
}

.middle-list-image {
  width: 112rpx;
  height: 112rpx;
  position: relative;
}

.middle-list-icon {
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  width: 112rpx;
  height: 30rpx;
  background: rgba(248, 82, 78, 1);
  position: absolute;
  bottom: 0;
}

.middle-list-view {
  padding: 16rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.middle-list-text1 {
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  font-size: 24rpx;
}

.middle-list-text2 {
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  width: 288rpx;
}

.middle-list-but {
  font-weight: 400;
  color: rgba(248, 82, 78, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  width: 128rpx;
  height: 46rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(248, 82, 78, 1);
}

/* bottom */

.bottom-view {
  padding: 206rpx 0 0 40rpx;
  background: #fff;
}

.bottom-image1 {
  width: 30rpx;
  height: 34rpx;
  margin-right: 30rpx;
}

.bottom-image2 {
  width: 32rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.bottom-image3 {
  width: 32rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.bottom-image4 {
  width: 26rpx;
  height: 30rpx;
  margin-right: 32rpx;
}

.bottom-text-view {
  width: 100%;
  padding: 28rpx 0;
  border-bottom: 1rpx solid rgba(153, 153, 153, 0.2);
}

.login-text-view {
   width: 100%;
  padding: 3rpx 0;
  border-bottom: 1rpx solid rgba(153, 153, 153, 0.2);
}

.bottom-views:last-child .login-text-view {
  border: none;
}

.bottom-views:last-child .bottom-text-view {
  border: none;
}

.bottom-text {
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  font-size: 28rpx;
}

.bottom-views {
  box-sizing: border-box;
}

.bottom-icon {
  width: 32rpx;
  height: 32rpx;
  padding-right: 40rpx;
}

/* 覆盖层 */

/* 授权登录 */

.phone {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.phone-bg {
  width: 100%;
  height: 100vh;
  position: relative;
  background: rgba(0, 0, 0, 0.35);
}

.phone-tan {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 602rpx;
  height: 550rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  flex-direction: column;
}

.phone-button {
  width: 462rpx;
  height: 84rpx;
  background: rgba(248, 82, 78, 1);
  border-radius: 42rpx;
  padding: 0;
  margin: 0;
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 58rpx;
}

button::after {
  border: none;
}

.phone-text {
  width: 448rpx;
  font-size: 30rpx;
  color: #9b9b9b;
  line-height: 42rpx;
  margin: 36rpx 0 44rpx;
}

.phone-image {
  width: 158rpx;
  height: 158rpx;
  margin-top: 44rpx;
}

.button-login {
  width: 126rpx;
  height: 130rpx;
  margin: 0;
  padding: 0;
  border-radius: 50%;
  border: 0;
}

.login-image {
  width: 128rpx;
  height: 130rpx;
  border-radius: 50%;
}

/* tabbar */

.tabbar-view {
  width: 100%;
  height: 98rpx;
  background: rgba(250, 250, 250, 1);
  position: fixed;
  bottom: 0;
}

.tabbar-index {
  width: 44rpx;
  height: 44rpx;
}

.tabbar-index-text {
  font-weight: 400;
  color: #4a4a4a;
  line-height: 28rpx;
  font-size: 20rpx;
  margin-top: 6rpx;
}

.tabbar-middle {
  width: 152rpx;
  height: 110rpx;
  margin-bottom: 6rpx;
}

.tabbar-image-view {
  flex-direction: column;
  width: 250rpx;
}

.tabbar-me {
  width: 44rpx;
  height: 44rpx;
}

.tabbar-me-text {
  font-weight: 400;
  color: #f8524e;
  line-height: 28rpx;
  font-size: 20rpx;
  margin-top: 6rpx;
}
