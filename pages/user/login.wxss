page {
  background: #fff;
}

.login-view {
  flex-direction: column;
}

.login-image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 56rpx;
}

.login-but {
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
  font-size: 36rpx;
  width: 590rpx;
  height: 94rpx;
  background: rgba(248, 82, 78, 1);
  border-radius: 8rpx;
  margin-top: 120rpx;
}

.login-text {
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 32rpx;
}

.login-bottom {
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  font-size: 24rpx;
  position: absolute;
  bottom: 48rpx;
  left: 50%;
  width: 100%;
  transform: translateX(-50%)
}
