  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-top-right {
  font-size: 24rpx;
  color: #9b9b9b;
}

.bottom-suishi {
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  line-height: 28rpx;
  font-size: 20rpx;
}

.goods_right_dian {
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: rgba(74, 74, 74, 1);
  margin: 0 10rpx;
}

.goods_view:last-child .goods_right_dian {
