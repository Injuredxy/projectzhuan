/* pages/goAssemble/refund.wxss */

.refund {
  margin-top: 16rpx;
}

.refund-tit {
  height: 164rpx;
  background: linear-gradient(90deg, rgba(248, 82, 78, 1) 0%, rgba(255, 75, 43, 1) 100%);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(217, 217, 217, 0.5);
  opacity: 0.99;
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 164rpx;
  padding-left: 40rpx;
}

.refund-info {
  margin-top: 16rpx;
  background: #fff;
  padding: 0 48rpx 0 40rpx;
  min-height: 650rpx;
}

.refund-info-title {
  padding-top: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
}

.refund-info-detail {
  margin-top: 32rpx;
}

.refund-info-item-top {
  /* line-height: 0; */
  width: 100%;
}

.refund-info-item-top-left {
  width: 20rpx;
  height: 20rpx;
  z-index: 99;
  background: #4ec478;
  border-radius: 50%;
  margin-left: 8rpx;
}

.refund-info-item-top-left-false {
  width: 32rpx;
  height: 32rpx;
  z-index: 99;
  margin-left: 2rpx;
}

.refund-info-item-top-mid {
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  margin-left: 30rpx;
}

.refund-info-item-top-mid-false {
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  margin-left: 24rpx;
}

.refund-info-item-top-right {
  text-align: right;
  width: 210rpx;
  font-size: 22rpx;
  font-weight: 300;
  color: #999;
}

.refund-info-item-bot {
  position: relative;
  top: -24rpx;
  left: 16rpx;
  min-height: 110rpx;
  padding: 30rpx 4rpx 0 38rpx;
  border-left: solid 4rpx #4ec478;
}

.refund-info-item-bot view {
  font-size: 24rpx;
  font-weight: 300;
  color: rgba(155, 155, 155, 1);
  line-height: 34rpx;
}

.text-iphon {
  text-decoration: underline;
}

.refund-info-detail .refund-info-item:nth-of-type(2) {
  margin-top: -34rpx;
}

.refund-info-detail .refund-info-item:nth-of-type(3) {
  margin-top: -34rpx;
}

.refund-info-detail .refund-info-item:nth-of-type(4) {
  margin-top: -34rpx;
}

.no-border.refund-info-item-bot {
  border-left: solid 2rpx #fff;
}

